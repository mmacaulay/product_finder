# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=DEBUG

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://postgres:postgres@localhost:6000/product_finder_dev

# DE Product API Credentials
DE_PRODUCT_API_BASE_URL=https://digit-eyes.com/gtin/v3_0/
DE_PRODUCT_APP_KEY=your-api-key-here
DE_PRODUCT_AUTH_KEY=your-api-secret-here
DE_PRODUCT_FIELD_NAMES=description,uom,usage,brand,language,website,product_web_page,nutrition,formattedNutrition,ingredients,manufacturer,image,thumbnail,categories

# LLM Provider Configuration
# Default provider to use (perplexity or openai)
DEFAULT_LLM_PROVIDER=perplexity

# Cache configuration
LLM_CACHE_TTL_DAYS=30
LLM_ENABLE_CACHING=true

# Perplexity API (prioritized for product reviews with web search)
# Sign up at https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-your-api-key-here
PERPLEXITY_MODEL=sonar
# Alternative Sonar models (as of November 2025):
# - sonar: $1/1M tokens (standard, best value for web search)
# - sonar-pro: $3/$15 per 1M tokens (enhanced quality)
# - sonar-reasoning: $1/$5 per 1M tokens (reasoning capabilities)
# - sonar-reasoning-pro: $2/$8 per 1M tokens (advanced reasoning)
PERPLEXITY_MAX_TOKENS=400
PERPLEXITY_TEMPERATURE=0.5

# OpenAI API (alternative provider for analysis & reasoning)
# Sign up at https://platform.openai.com/
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-5-nano
# GPT-5 series models (as of November 2025):
# - gpt-5-nano: $0.05/$0.40 per 1M tokens (ultra cost-effective)
# - gpt-5-mini: $0.25/$2.00 per 1M tokens (balanced quality/cost)
# - gpt-5 or gpt-5.1: $1.25/$10.00 per 1M tokens (high quality)
# - gpt-5-pro: $15/$120 per 1M tokens (maximum quality)
OPENAI_MAX_TOKENS=400
OPENAI_TEMPERATURE=0.5