# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
LOG_LEVEL=DEBUG

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://postgres:postgres@localhost:6000/product_finder_dev

# DE Product API Credentials
DE_PRODUCT_API_BASE_URL=https://digit-eyes.com/gtin/v3_0/
DE_PRODUCT_APP_KEY=your-api-key-here
DE_PRODUCT_AUTH_KEY=your-api-secret-here
DE_PRODUCT_FIELD_NAMES=description,uom,usage,brand,language,website,product_web_page,nutrition,formattedNutrition,ingredients,manufacturer,image,thumbnail,categories

# LLM Provider Configuration
# Default provider to use (perplexity or openai)
DEFAULT_LLM_PROVIDER=perplexity

# Cache configuration
LLM_CACHE_TTL_DAYS=30
LLM_ENABLE_CACHING=true

# Perplexity API (prioritized for product reviews with web search)
# Sign up at https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-your-api-key-here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online
PERPLEXITY_MAX_TOKENS=500
PERPLEXITY_TEMPERATURE=0.7

# OpenAI API (alternative provider)
# Sign up at https://platform.openai.com/
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7